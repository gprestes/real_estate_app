{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "automerge": true
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        }
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "extends": [
            "schedule:daily"
        ]
    },
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMultipleMinor": true,
  "separateMinorPatch": true,
    "extends": [
        "config:recommended"
    ]
}
